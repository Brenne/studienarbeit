<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.dhbw.studientag.LocationSpieleActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/button_getLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_location"
        android:layout_below="@+id/textView_location"
        android:onClick="showLocation"
        android:text="Show Location" />

    <ImageView
        android:id="@+id/imageView_location"
        android:contentDescription="myLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_getLocation"
        android:layout_below="@+id/button_getLocation"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/ic_menu_mylocation" />

    <ListView
        android:id="@+id/listView_buildings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView_location"
        android:layout_marginTop="42dp" >

    </ListView>

    <Button
        android:id="@+id/button_orderList"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_getLocation"
        android:layout_alignBottom="@+id/button_getLocation"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/button_getLocation"
        android:text="Order List"
        android:onClick="orderList" />

</RelativeLayout>